
<!--  Wish Modal -->
<div id="modal<%= wish.id.to_s %>" class="modal">
  <div class="modal-header">
    <h3><%= wish.title %></h3>
  </div>
  <div class="modal-content">
    <div class="wish-image">
      <%= image_tag('sample-1.jpg') %>
    </div>
    <p><%= wish.description %></p>
  </div>
  <div class="modal-footer">
    <%= link_to edit_wish_path(wish), { class: "btn-floating btn-small waves-effect waves-light orange", id: "modal#{wish.id.to_s}" } do %>
      <i class="material-icons">edit</i>
    <% end %>
    <%= link_to wish_path(wish), method: :delete,
        data: {confirm: "Are you sure you want to delete wish?"},
        class: "btn-floating btn-small waves-effect waves-light red" do %>
      <i class="material-icons">delete</i>
    <% end %>

    <%= link_to '#!', { class: "modal-close btn-floating btn-small waves-effect waves-light grey" } do %>
      <i class="material-icons">close</i>
    <% end %>
  </div>
</div>
