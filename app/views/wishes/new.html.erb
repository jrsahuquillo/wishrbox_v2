<h3 class='text-left'>New Wish</h3>
<div class='row'>
  <div class='col-md-12'>
    <%= form_for(@wish, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class='form-group'>
        <div class='control-label col-md-1'>
          <%= f.label :title %>
        </div>
        <div class='col-md-11'>
          <%= f.text_field :title, class: 'form-control', placeholder: 'Wish title', autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-md-1'>
          <%= f.label :description %>
        </div>
        <div class='col-md-11'>
          <%= f.text_area :description, rows: 10, class: 'form-control', placeholder: 'Wish description' %>
        </div>
      </div>
      <div class='form-group'>
        <div class='col-md-offset-1 col-md-11'>
          <%= f.submit class: 'btn btn-primary btn-lg pull-right' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
