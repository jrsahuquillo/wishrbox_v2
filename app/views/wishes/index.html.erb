<div class="fixed-action-btn">
  <%= link_to new_wish_path, class:".fixed-action-btn btn-floating btn-large waves-effect waves-light orange" do %>
  <i class="large material-icons">add</i>
  <% end %>
</div>

<% if @wishes.empty? %>
  <h2 id="no-wishes">No wishes created</h2>
<% else %>
  <div class="row">
    <% @wishes.each do |wish| %>
      <div class="col s12 m4">
        <div class="card small">
          <div class="card-image">
            <%= link_to image_tag('sample-1.jpg'), "#{"#modal" + wish.id.to_s}", 'data-target' => "modal" + wish.id.to_s, class: "modal-trigger" %>
            <span class="card-title"><%= link_to wish.title, "#{"#modal" + wish.id.to_s}", class: " modal-trigger" %></span>
          </div>
        </div>
      </div>

      <div id="modal<%= wish.id.to_s %>" class="modal">
        <div class="modal-header">
          <h3><%= wish.title %></h3>
          <%= link_to '/', { class: "btn-floating btn-small waves-effect waves-light right red" } do %>
            <i class="material-icons">edit</i>
          <% end %>
        </div>
        <div class="modal-content">
          <div class="wish-image">
            <%= image_tag('sample-1.jpg') %>
          </div>
          <p><%= wish.description %></p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
