<div class="fixed-action-btn">
  <%= link_to new_wish_path, class:".fixed-action-btn btn-floating btn-large waves-effect waves-light orange" do %>
  <i class="large material-icons">add</i>
  <% end %>
</div>

<div class="row">
  <div class="col s12 m6">
    <% if @wishes.empty? %>
      <h2 id="no-wishes">No wishes created</h2>
    <% else %>
      <% @wishes.each do |wish| %>
        <div class="card">
          <div class="card-image">
            <img src="https://lorempixel.com/190/100/nature/6">
            <span class="card-title white"><%= link_to wish.title, wish_path(wish) %></span>
            <a class="btn-floating halfway-fab waves-effect waves-light orange">
              <i class="material-icons">edit</i>
            </a>
          </div>
          <div class="card-content">
            <p><%= truncate(wish.description, length: 500) %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
